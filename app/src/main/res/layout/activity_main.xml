<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送用户"
        android:id="@+id/userid"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送次数"
        android:id="@+id/sendnums"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/userid"
        android:layout_alignLeft="@+id/userid"
        android:layout_alignStart="@+id/userid" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="间隔时间："
        android:id="@+id/time"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/sendnums"
        android:layout_alignLeft="@+id/sendnums"
        android:layout_alignStart="@+id/sendnums" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_userid"
        android:layout_toRightOf="@+id/time"
        android:width="50dp"
        android:layout_toStartOf="@+id/seccess"
        android:layout_alignBottom="@+id/userid"
        android:layout_alignRight="@+id/editText_time"
        android:layout_alignEnd="@+id/editText_time" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_sendnums"
        android:width="50dp"
        android:layout_alignLeft="@+id/editText_userid"
        android:layout_alignStart="@+id/editText_userid"
        android:layout_toStartOf="@+id/unseccess"
        android:layout_above="@+id/time"
        android:layout_alignRight="@+id/editText_time"
        android:layout_alignEnd="@+id/editText_time" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_time"
        android:width="100dp"
        android:layout_toRightOf="@+id/time"
        android:layout_alignBottom="@+id/time" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送"
        android:id="@+id/button_send"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/time"
        android:layout_alignLeft="@+id/time"
        android:layout_alignStart="@+id/time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="成功数："
        android:id="@+id/seccess"
        android:layout_alignTop="@+id/button_send"
        android:layout_alignRight="@+id/editText_time"
        android:layout_alignEnd="@+id/editText_time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="失败数："
        android:id="@+id/unseccess"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/seccess"
        android:layout_alignLeft="@+id/seccess"
        android:layout_alignStart="@+id/seccess" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/textView_success"
        android:layout_alignTop="@+id/seccess"
        android:layout_toRightOf="@+id/seccess"
        android:layout_toEndOf="@+id/seccess"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/textView_unsuccess"
        android:layout_alignBottom="@+id/unseccess"
        android:layout_alignLeft="@+id/textView_success"
        android:layout_alignStart="@+id/textView_success" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录用户"
        android:id="@+id/textView"
        android:layout_marginTop="47dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/userid"
        android:layout_alignStart="@+id/userid" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_login"
        android:width="50dp"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignLeft="@+id/editText_userid"
        android:layout_alignStart="@+id/editText_userid" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        android:id="@+id/button_login"
        android:layout_alignBottom="@+id/editText_login"
        android:layout_toRightOf="@+id/editText_login"
        android:layout_toEndOf="@+id/editText_login"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收到消息："
        android:id="@+id/textView2"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/unseccess"
        android:layout_alignLeft="@+id/button_send"
        android:layout_alignStart="@+id/button_send"
        android:layout_toLeftOf="@+id/editText_time"
        android:layout_toStartOf="@+id/editText_time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/textView_RecNum"
        android:layout_toLeftOf="@+id/textView_success"
        android:layout_alignTop="@+id/textView2"
        android:layout_toRightOf="@+id/button_send"
        android:layout_toEndOf="@+id/button_send" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="写日志"
        android:id="@+id/button_flashlog"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

</RelativeLayout>
